# ============= DESENVOLVIMENTO LOCAL =============
NODE_ENV=development
API_PORT=3001
API_HOST=0.0.0.0

# ============= BANCO DE DADOS =============
# PostgreSQL App (aplicação)
DATABASE_URL=postgresql://user:password@localhost:5432/agende_ai_app

# Redis App (cache, sessions)
REDIS_URL=redis://localhost:6379

# ============= JWT =============
JWT_SECRET=sua-chave-secreta-super-segura-aqui-mude-em-producao
JWT_EXPIRES_IN=7d

# ============= EVOLUTION API =============
# Chave de API da Evolution
# Obtenha em: https://evolution.api.docs
EVOLUTION_API_KEY=sua-chave-api-evolution-aqui

# URLs das Instâncias Evolution
# Em desenvolvimento: localhost + porta
EVOLUTION_1_URL=http://localhost:8001
EVOLUTION_2_URL=http://localhost:8002
EVOLUTION_3_URL=http://localhost:8003
EVOLUTION_4_URL=http://localhost:8004
EVOLUTION_5_URL=http://localhost:8005
EVOLUTION_6_URL=http://localhost:8006
EVOLUTION_7_URL=http://localhost:8007
EVOLUTION_8_URL=http://localhost:8008
EVOLUTION_9_URL=http://localhost:8009
EVOLUTION_10_URL=http://localhost:8010

# ============= UPLOAD DE ARQUIVOS =============
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ============= CORS =============
CORS_ORIGIN=http://localhost:3000

# ============= EMAIL =============
# Opcional: configure se quiser enviar emails
# SMTP_HOST=smtp.seudominio.com
# SMTP_PORT=587
# SMTP_USER=seu-email@seudominio.com
# SMTP_PASSWORD=sua-senha
# SMTP_FROM=noreply@seudominio.com

# ============= LOGGING =============
LOG_LEVEL=debug

