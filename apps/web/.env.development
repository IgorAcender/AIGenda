# Otimizações de Performance para Desenvolvimento

# 1. Desabilitar módulos não essenciais
NEXT_PUBLIC_APP_ENV=development

# 2. Limitar workers de build
NEXT_MAX_BUILD_MEMORY=1536
NODE_OPTIONS=--max-old-space-size=1536

# 3. Desabilitar telemetria (economiza recursos)
NEXT_TELEMETRY_DISABLED=1

# 4. Speedup no TypeScript checking (apenas em dev)
NEXT_TYPESCRIPT_SKIP_TYPE_CHECK=1

# 5. Cache agressivo durante desenvolvimento
NEXT_PUBLIC_STATIC_CACHE_DURATION=3600

# 6. API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# 7. Desabilitar source maps em dev (reduz memória)
NEXT_SOURCE_MAPS=false
