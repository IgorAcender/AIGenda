<!-- Agenda / Calend√°rio -->
<div class="card">
  <div class="p-4 border-b flex items-center justify-between">
    <div class="flex items-center gap-4">
      <h3 class="text-lg font-semibold text-gray-800">Agenda</h3>
      <div class="flex items-center gap-2">
        <button hx-get="/partials/agenda?date=<%= prevDate %>" hx-target="#main-content"
          class="p-2 hover:bg-gray-100 rounded">‚Üê</button>
        <span class="font-medium"><%= currentDateFormatted %></span>
        <button hx-get="/partials/agenda?date=<%= nextDate %>" hx-target="#main-content"
          class="p-2 hover:bg-gray-100 rounded">‚Üí</button>
      </div>
    </div>
    <button hx-get="/partials/agenda/form" hx-target="#modal-container" class="btn-primary flex items-center gap-2">
      <span>‚ûï</span> Novo Agendamento
    </button>
  </div>

  <!-- Timeline View -->
  <div class="p-4">
    <div class="grid grid-cols-1 lg:grid-cols-<%= professionals?.length || 1 %> gap-4">
      <% if (professionals && professionals.length > 0) { %>
        <% professionals.forEach(prof => { %>
          <div class="border rounded-lg">
            <!-- Professional Header -->
            <div class="p-3 bg-gray-50 border-b">
              <div class="flex items-center gap-2">
                <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                  <span class="text-white font-semibold text-sm"><%= prof.name?.charAt(0) %></span>
                </div>
                <span class="font-medium text-gray-800"><%= prof.name %></span>
              </div>
            </div>
            
            <!-- Time Slots -->
            <div class="p-2 space-y-1">
              <% const profAppointments = appointments?.filter(a => a.professionalId === prof.id) || [] %>
              <% if (profAppointments.length > 0) { %>
                <% profAppointments.forEach(apt => { %>
                  <div class="p-2 rounded-lg text-sm cursor-pointer hover:opacity-80"
                       style="background: <%= apt.status === 'CONFIRMED' ? '#dcfce7' : apt.status === 'CANCELLED' ? '#fee2e2' : '#dbeafe' %>">
                    <div class="flex items-center justify-between">
                      <span class="font-medium"><%= apt.time %></span>
                      <% if (apt.status === 'CONFIRMED') { %>
                        <span class="text-xs text-green-600">‚úì</span>
                      <% } else if (apt.status === 'CANCELLED') { %>
                        <span class="text-xs text-red-600">‚úï</span>
                      <% } %>
                    </div>
                    <p class="text-gray-700"><%= apt.clientName %></p>
                    <p class="text-xs text-gray-500"><%= apt.serviceName %></p>
                  </div>
                <% }) %>
              <% } else { %>
                <div class="text-center py-8 text-gray-400 text-sm">
                  Sem agendamentos
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-full text-center py-12 text-gray-500">
          <p class="text-4xl mb-2">üìÖ</p>
          <p>Cadastre profissionais para ver a agenda</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Summary -->
  <div class="p-4 border-t bg-gray-50">
    <div class="flex items-center justify-between text-sm">
      <div class="flex items-center gap-4">
        <span class="flex items-center gap-1">
          <span class="w-3 h-3 rounded-full bg-blue-200"></span> Pendente
        </span>
        <span class="flex items-center gap-1">
          <span class="w-3 h-3 rounded-full bg-green-200"></span> Confirmado
        </span>
        <span class="flex items-center gap-1">
          <span class="w-3 h-3 rounded-full bg-red-200"></span> Cancelado
        </span>
      </div>
      <span class="text-gray-500">
        Total: <%= appointments?.length || 0 %> agendamentos
      </span>
    </div>
  </div>
</div>

<div id="modal-container"></div>
