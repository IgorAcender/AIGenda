  <!-- Toast Notifications -->
  <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2"></div>

  <script>
    // Handle HTMX events for toasts
    document.body.addEventListener('showToast', function(evt) {
      const { message, type } = evt.detail;
      const toast = document.createElement('div');
      toast.className = `p-4 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
      toast.textContent = message;
      document.getElementById('toast-container').appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    });

    // Update active sidebar item on navigation
    document.body.addEventListener('htmx:afterSwap', function(evt) {
      if (evt.detail.target.id === 'main-content') {
        document.querySelectorAll('.sidebar-item').forEach(item => item.classList.remove('active'));
        const url = window.location.pathname;
        document.querySelectorAll('.sidebar-item').forEach(item => {
          if (item.getAttribute('hx-push-url') === url) {
            item.classList.add('active');
          }
        });
      }
    });
  </script>
