<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Agende AI' %></title>
  <script src="https://unpkg.com/htmx.org@1.9.10"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * { font-family: 'Poppins', sans-serif; }
    .htmx-request { opacity: 0.7; transition: opacity 200ms; }
    .htmx-request.htmx-indicator { opacity: 1; }
    
    /* Sidebar Styles */
    .sidebar-item { 
      transition: all 0.2s ease;
    }
    .sidebar-item:hover { 
      background: rgba(255, 255, 255, 0.1);
    }
    .sidebar-item.active { 
      background: linear-gradient(90deg, rgba(59, 130, 246, 0.3), transparent);
      border-left: 3px solid #3b82f6;
    }
    
    /* Card Hover Effect */
    .card-hover {
      transition: all 0.2s ease;
    }
    .card-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    }
    
    /* Buttons */
    .btn-primary { 
      background: linear-gradient(135deg, #3b82f6, #2563eb); 
      color: white; 
      padding: 10px 20px; 
      border-radius: 8px; 
      transition: all 0.2s;
      font-weight: 500;
      border: none;
      cursor: pointer;
    }
    .btn-primary:hover { 
      background: linear-gradient(135deg, #2563eb, #1d4ed8);
      transform: translateY(-1px);
    }
    .btn-secondary {
      background: white;
      color: #374151;
      padding: 10px 20px;
      border-radius: 8px;
      border: 1px solid #e5e7eb;
      transition: all 0.2s;
      font-weight: 500;
      cursor: pointer;
    }
    .btn-secondary:hover {
      background: #f9fafb;
      border-color: #d1d5db;
    }
    .btn-danger { 
      background: linear-gradient(135deg, #ef4444, #dc2626); 
      color: white; 
      padding: 10px 20px; 
      border-radius: 8px;
      border: none;
      cursor: pointer;
    }
    .btn-danger:hover { 
      background: linear-gradient(135deg, #dc2626, #b91c1c); 
    }
    
    /* Badges */
    .badge-success {
      background: #dcfce7;
      color: #166534;
      padding: 4px 12px;
      border-radius: 9999px;
      font-size: 12px;
      font-weight: 500;
    }
    .badge-warning {
      background: #fef3c7;
      color: #92400e;
      padding: 4px 12px;
      border-radius: 9999px;
      font-size: 12px;
      font-weight: 500;
    }
    .badge-danger {
      background: #fee2e2;
      color: #991b1b;
      padding: 4px 12px;
      border-radius: 9999px;
      font-size: 12px;
      font-weight: 500;
    }
    
    /* Table */
    .table-row:hover { background: #f8fafc; }
    
    /* Loading */
    .loading-spinner { animation: spin 1s linear infinite; }
    @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
    
    /* Scrollbar for sidebar */
    .sidebar-scroll::-webkit-scrollbar { width: 6px; }
    .sidebar-scroll::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.2); border-radius: 3px; }
  </style>
</head>
<body class="bg-slate-50 min-h-screen">
  
  <!-- Mobile Menu Button -->
  <button id="mobile-menu-btn" class="fixed top-4 left-4 z-50 md:hidden p-2 bg-slate-800 text-white rounded-lg">
    <i class="fas fa-bars"></i>
  </button>

  <!-- Sidebar Overlay (mobile) -->
  <div id="sidebar-overlay" class="fixed inset-0 bg-black/50 z-40 hidden md:hidden"></div>

  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <aside id="sidebar" class="fixed inset-y-0 left-0 w-64 bg-gradient-to-b from-slate-800 to-slate-950 text-slate-100 overflow-y-auto shadow-xl z-50 transform -translate-x-full md:translate-x-0 transition-transform duration-300 sidebar-scroll">
      
      <!-- Logo Section -->
      <div class="px-4 py-6 border-b border-slate-700/50 flex items-center gap-3">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center text-white font-bold text-lg shadow-lg">
          AI
        </div>
        <div>
          <h1 class="text-lg font-bold text-white">Agende AI</h1>
          <p class="text-xs text-slate-400"><%= tenantName || 'Sistema de Agendamento' %></p>
        </div>
      </div>
      
      <!-- Menu -->
      <nav class="px-3 py-6 space-y-1">
        <a href="/dashboard" 
           hx-get="/partials/dashboard" 
           hx-target="#main-content" 
           hx-push-url="/dashboard"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'dashboard' ? 'active' : '' %>">
          <i class="fas fa-home w-5 text-center"></i>
          <span>Dashboard</span>
        </a>
        
        <a href="/agenda" 
           hx-get="/partials/agenda" 
           hx-target="#main-content"
           hx-push-url="/agenda"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'agenda' ? 'active' : '' %>">
          <i class="fas fa-calendar-alt w-5 text-center"></i>
          <span>Agenda</span>
        </a>

        <!-- Cadastro Section -->
        <div class="pt-6 pb-2">
          <p class="px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Cadastro</p>
        </div>
        
        <a href="/cadastro/clientes" 
           hx-get="/partials/clientes" 
           hx-target="#main-content"
           hx-push-url="/cadastro/clientes"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'clientes' ? 'active' : '' %>">
          <i class="fas fa-users w-5 text-center"></i>
          <span>Clientes</span>
        </a>
        
        <a href="/cadastro/profissionais" 
           hx-get="/partials/profissionais" 
           hx-target="#main-content"
           hx-push-url="/cadastro/profissionais"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'profissionais' ? 'active' : '' %>">
          <i class="fas fa-user-tie w-5 text-center"></i>
          <span>Profissionais</span>
        </a>
        
        <a href="/cadastro/servicos" 
           hx-get="/partials/servicos" 
           hx-target="#main-content"
           hx-push-url="/cadastro/servicos"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'servicos' ? 'active' : '' %>">
          <i class="fas fa-cut w-5 text-center"></i>
          <span>Serviços</span>
        </a>

        <!-- Financeiro Section -->
        <div class="pt-6 pb-2">
          <p class="px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Financeiro</p>
        </div>
        
        <a href="/financeiro/caixa" 
           hx-get="/partials/caixa" 
           hx-target="#main-content"
           hx-push-url="/financeiro/caixa"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'caixa' ? 'active' : '' %>">
          <i class="fas fa-cash-register w-5 text-center"></i>
          <span>Caixa</span>
        </a>
        
        <a href="/financeiro/transacoes" 
           hx-get="/partials/transacoes" 
           hx-target="#main-content"
           hx-push-url="/financeiro/transacoes"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'transacoes' ? 'active' : '' %>">
          <i class="fas fa-exchange-alt w-5 text-center"></i>
          <span>Transações</span>
        </a>

        <!-- Sistema Section -->
        <div class="pt-6 pb-2">
          <p class="px-4 text-xs font-semibold text-slate-500 uppercase tracking-wider">Sistema</p>
        </div>
        
        <a href="/configuracoes" 
           hx-get="/partials/configuracoes" 
           hx-target="#main-content"
           hx-push-url="/configuracoes"
           class="sidebar-item flex items-center gap-3 px-4 py-3 rounded-lg text-slate-300 hover:text-white <%= currentPage === 'configuracoes' ? 'active' : '' %>">
          <i class="fas fa-cog w-5 text-center"></i>
          <span>Configurações</span>
        </a>
      </nav>

      <!-- User Section -->
      <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-slate-700/50 bg-slate-900/50">
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white font-semibold shadow-lg">
            <%= userName ? userName.charAt(0).toUpperCase() : 'U' %>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-white truncate"><%= userName || 'Usuário' %></p>
            <p class="text-xs text-slate-400"><%= userRole || 'Admin' %></p>
          </div>
          <button 
            hx-post="/api/logout" 
            hx-confirm="Tem certeza que deseja sair?"
            class="p-2 text-slate-400 hover:text-red-400 hover:bg-slate-800 rounded-lg transition-colors"
            title="Sair">
            <i class="fas fa-sign-out-alt"></i>
          </button>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 md:ml-64">
      <!-- Header -->
      <header class="bg-white border-b border-slate-200 sticky top-0 z-30 shadow-sm">
        <div class="flex items-center justify-between px-6 py-4">
          <div class="md:ml-0 ml-10">
            <h2 class="text-2xl font-bold text-slate-900"><%= pageTitle || 'Dashboard' %></h2>
          </div>
          <div class="flex items-center gap-4">
            <span class="text-sm text-slate-500 hidden sm:block"><%= new Date().toLocaleDateString('pt-BR', { weekday: 'long', day: 'numeric', month: 'long' }) %></span>
            <button class="p-2 text-slate-500 hover:bg-slate-100 rounded-lg transition">
              <i class="fas fa-bell"></i>
            </button>
            <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
              <%= userName ? userName.charAt(0).toUpperCase() : 'U' %>
            </div>
          </div>
        </div>
      </header>

      <!-- Content Area -->
      <div id="main-content" class="p-6 max-w-7xl mx-auto">
        <%- content %>
      </div>
    </main>
  </div>

  <!-- Toast Notifications -->
  <div id="toast-container" class="fixed bottom-4 right-4 z-50 space-y-2"></div>

  <script>
    // Mobile menu toggle
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    
    function openSidebar() {
      sidebar.classList.remove('-translate-x-full');
      overlay.classList.remove('hidden');
    }
    
    function closeSidebar() {
      sidebar.classList.add('-translate-x-full');
      overlay.classList.add('hidden');
    }
    
    mobileMenuBtn?.addEventListener('click', openSidebar);
    overlay?.addEventListener('click', closeSidebar);
    
    // Close sidebar on link click (mobile)
    document.querySelectorAll('.sidebar-item').forEach(item => {
      item.addEventListener('click', () => {
        if (window.innerWidth < 768) closeSidebar();
      });
    });
    
    // Handle HTMX events for toasts
    document.body.addEventListener('showToast', function(evt) {
      const { message, type } = evt.detail;
      const toast = document.createElement('div');
      toast.className = `p-4 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-500' : 'bg-red-500'}`;
      toast.textContent = message;
      document.getElementById('toast-container').appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    });

    // Update active sidebar item on navigation
    document.body.addEventListener('htmx:afterSwap', function(evt) {
      if (evt.detail.target.id === 'main-content') {
        document.querySelectorAll('.sidebar-item').forEach(item => item.classList.remove('active'));
        const url = window.location.pathname;
        document.querySelectorAll('.sidebar-item').forEach(item => {
          if (item.getAttribute('hx-push-url') === url) {
            item.classList.add('active');
          }
        });
      }
    });
  </script>
</body>
</html>
