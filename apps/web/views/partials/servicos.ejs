<!-- Page Header -->
<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-900">
      <i class="fas fa-cut text-pink-500 mr-2"></i>Serviços
    </h1>
    <p class="text-slate-500 mt-1">Gerencie os serviços oferecidos</p>
  </div>
  <button 
    hx-get="/partials/servicos/form"
    hx-target="#modal-container"
    class="btn-primary flex items-center gap-2">
    <i class="fas fa-plus"></i> Novo Serviço
  </button>
</div>

<!-- Serviços Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% if (services && services.length > 0) { %>
    <% services.forEach(service => { %>
      <div class="bg-white rounded-xl shadow-md border border-slate-100 overflow-hidden card-hover" id="service-row-<%= service.id %>">
        <div class="h-3 bg-gradient-to-r from-pink-500 to-purple-500"></div>
        <div class="p-6">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-slate-900 text-lg"><%= service.name %></h3>
              <p class="text-sm text-slate-500 mt-1"><%= service.description || 'Sem descrição' %></p>
            </div>
            <div class="w-12 h-12 bg-pink-100 rounded-xl flex items-center justify-center text-pink-600">
              <i class="fas fa-cut text-xl"></i>
            </div>
          </div>
          
          <div class="mt-4 pt-4 border-t border-slate-100 grid grid-cols-2 gap-4">
            <div>
              <p class="text-xs text-slate-500 uppercase font-medium">Preço</p>
              <p class="text-xl font-bold text-green-600">R$ <%= (service.price || 0).toFixed(2).replace('.', ',') %></p>
            </div>
            <div>
              <p class="text-xs text-slate-500 uppercase font-medium">Duração</p>
              <p class="text-xl font-bold text-slate-900"><%= service.duration || 30 %> min</p>
            </div>
          </div>
        </div>
        
        <div class="px-6 py-3 bg-slate-50 border-t border-slate-100 flex justify-end gap-2">
          <button 
            hx-get="/partials/servicos/form?id=<%= service.id %>"
            hx-target="#modal-container"
            class="px-3 py-1.5 text-sm text-blue-600 hover:bg-blue-50 rounded-lg transition flex items-center gap-1">
            <i class="fas fa-edit"></i> Editar
          </button>
          <button 
            hx-delete="/api/services/<%= service.id %>"
            hx-confirm="Tem certeza que deseja excluir este serviço?"
            hx-target="#service-row-<%= service.id %>"
            hx-swap="outerHTML"
            class="px-3 py-1.5 text-sm text-red-600 hover:bg-red-50 rounded-lg transition flex items-center gap-1">
            <i class="fas fa-trash"></i> Excluir
          </button>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-span-full bg-white rounded-xl shadow-md border border-slate-100 p-12 text-center">
      <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <i class="fas fa-cut text-4xl text-slate-400"></i>
      </div>
      <p class="text-lg font-medium text-slate-900">Nenhum serviço cadastrado</p>
      <p class="text-slate-500 mt-1">Clique em "Novo Serviço" para adicionar</p>
    </div>
  <% } %>
</div>

<!-- Modal Container -->
<div id="modal-container"></div>
