<!-- Two Column Section -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  
  <!-- PrÃ³ximos Agendamentos (2 cols) -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-xl shadow-md border border-slate-100 overflow-hidden">
      
      <!-- Card Header -->
      <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between bg-slate-50">
        <h3 class="text-lg font-semibold text-slate-900">
          <i class="fas fa-clock mr-2 text-blue-500"></i>PrÃ³ximos Agendamentos
        </h3>
        <a href="/agenda" hx-get="/partials/agenda" hx-target="#main-content" hx-push-url="/agenda" 
           class="text-blue-600 text-sm font-medium hover:text-blue-700 transition">
          Ver Todos <i class="fas fa-arrow-right ml-1"></i>
        </a>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto">
        <% if (appointments && appointments.length > 0) { %>
          <table class="w-full">
            <thead class="bg-slate-50 border-b border-slate-200">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Cliente</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">ServiÃ§o</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Hora</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-slate-600 uppercase tracking-wider">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <% appointments.slice(0, 5).forEach(apt => { %>
                <tr class="hover:bg-slate-50 transition">
                  <td class="px-6 py-4">
                    <div class="flex items-center gap-3">
                      <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center text-white text-sm font-semibold">
                        <%= apt.clientName?.charAt(0) || '?' %>
                      </div>
                      <span class="font-medium text-slate-900"><%= apt.clientName %></span>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-slate-600"><%= apt.serviceName %></td>
                  <td class="px-6 py-4 text-slate-900 font-medium"><%= apt.time %></td>
                  <td class="px-6 py-4">
                    <% if (apt.status === 'confirmed' || apt.status === 'CONFIRMED') { %>
                      <span class="badge-success">Confirmado</span>
                    <% } else if (apt.status === 'pending' || apt.status === 'PENDING') { %>
                      <span class="badge-warning">Pendente</span>
                    <% } else if (apt.status === 'cancelled' || apt.status === 'CANCELLED') { %>
                      <span class="badge-danger">Cancelado</span>
                    <% } else { %>
                      <span class="badge-success"><%= apt.status || 'Confirmado' %></span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <div class="text-center py-12 text-slate-500">
            <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <i class="fas fa-calendar-times text-3xl text-slate-400"></i>
            </div>
            <p class="font-medium">Nenhum agendamento para hoje</p>
            <p class="text-sm mt-1">Clique em "Novo Agendamento" para adicionar</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- AÃ§Ãµes RÃ¡pidas (1 col) -->
  <div class="space-y-6">
    
    <!-- Status Card -->
    <div class="bg-white rounded-xl shadow-md border border-slate-100 p-6">
