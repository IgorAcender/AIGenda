          <i class="fas fa-cash-register"></i>
          Abrir Caixa
        </a>
      </div>
    </div>

    <!-- Today's Summary -->
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl shadow-md p-6 text-white">
      <h4 class="font-semibold mb-4 flex items-center gap-2">
        <i class="fas fa-chart-pie"></i> Resumo do Dia
      </h4>
      <div class="space-y-3">
        <div class="flex justify-between items-center">
          <span class="text-slate-300">Agendamentos</span>
          <span class="font-bold"><%= stats?.appointmentsToday || 0 %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-300">ConcluÃ­dos</span>
          <span class="font-bold text-green-400"><%= stats?.completedToday || 0 %></span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-slate-300">Pendentes</span>
          <span class="font-bold text-yellow-400"><%= stats?.pendingToday || (stats?.appointmentsToday || 0) %></span>
        </div>
        <div class="border-t border-slate-700 pt-3 mt-3">
          <div class="flex justify-between items-center">
            <span class="text-slate-300">Faturamento Hoje</span>
            <span class="font-bold text-green-400">R$ <%= (stats?.todayRevenue || 0).toLocaleString('pt-BR', {minimumFractionDigits: 0}) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

