<!-- Page Header -->
<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-900">
      <i class="fas fa-cash-register text-green-500 mr-2"></i>Caixa
    </h1>
    <p class="text-slate-500 mt-1">Controle financeiro do dia</p>
  </div>
  <div class="flex items-center gap-3">
    <% if (!cashRegister || cashRegister.status === 'closed') { %>
      <button 
        hx-post="/api/cash-register/open"
        hx-target="#main-content"
        class="btn-primary flex items-center gap-2">
        <i class="fas fa-unlock"></i> Abrir Caixa
      </button>
    <% } else { %>
      <button 
        hx-post="/api/cash-register/close"
        hx-confirm="Tem certeza que deseja fechar o caixa?"
        hx-target="#main-content"
        class="btn-danger flex items-center gap-2">
        <i class="fas fa-lock"></i> Fechar Caixa
      </button>
    <% } %>
  </div>
</div>

<!-- Status Card -->
<div class="bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-xl p-6 mb-6 shadow-lg">
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
    <div>
      <p class="text-green-100 text-sm font-medium">Status do Caixa</p>
      <div class="flex items-center gap-3 mt-2">
        <% if (cashRegister && cashRegister.status === 'open') { %>
          <span class="w-3 h-3 bg-white rounded-full animate-pulse"></span>
          <h2 class="text-3xl font-bold">Caixa Aberto</h2>
        <% } else { %>
          <span class="w-3 h-3 bg-red-400 rounded-full"></span>
          <h2 class="text-3xl font-bold">Caixa Fechado</h2>
        <% } %>
      </div>
    </div>
    <div class="text-right">
      <p class="text-green-100 text-sm">Saldo Atual</p>
      <p class="text-4xl font-bold">R$ <%= (cashRegister?.balance || 0).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></p>
    </div>
  </div>
</div>

<!-- Stats Row -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center text-green-600">
      <i class="fas fa-arrow-up text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-green-600">R$ <%= (cashRegister?.totalIn || 0).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></p>
      <p class="text-sm text-slate-500">Entradas</p>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center text-red-600">
      <i class="fas fa-arrow-down text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-red-600">R$ <%= (cashRegister?.totalOut || 0).toLocaleString('pt-BR', {minimumFractionDigits: 2}) %></p>
      <p class="text-sm text-slate-500">Saídas</p>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center text-blue-600">
      <i class="fas fa-credit-card text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-slate-900"><%= cashRegister?.transactionCount || 0 %></p>
      <p class="text-sm text-slate-500">Transações</p>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center text-purple-600">
      <i class="fas fa-chart-line text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-slate-900"><%= cashRegister?.appointmentCount || 0 %></p>
      <p class="text-sm text-slate-500">Atendimentos</p>
    </div>
  </div>
</div>

<!-- Quick Actions -->
<% if (cashRegister && cashRegister.status === 'open') { %>
<div class="bg-white rounded-xl shadow-md border border-slate-100 p-6 mb-6">
  <h3 class="text-lg font-semibold text-slate-900 mb-4">
    <i class="fas fa-bolt text-yellow-500 mr-2"></i>Registrar Movimento
  </h3>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <button 
      hx-get="/partials/caixa/form?type=in"
      hx-target="#modal-container"
      class="p-4 border-2 border-dashed border-green-200 rounded-xl hover:border-green-500 hover:bg-green-50 transition flex items-center justify-center gap-3 text-green-600">
      <i class="fas fa-plus-circle text-2xl"></i>
      <span class="font-medium">Entrada</span>
    </button>
    <button 
      hx-get="/partials/caixa/form?type=out"
      hx-target="#modal-container"
      class="p-4 border-2 border-dashed border-red-200 rounded-xl hover:border-red-500 hover:bg-red-50 transition flex items-center justify-center gap-3 text-red-600">
      <i class="fas fa-minus-circle text-2xl"></i>
      <span class="font-medium">Saída</span>
    </button>
    <button 
      hx-get="/partials/caixa/form?type=payment"
      hx-target="#modal-container"
      class="p-4 border-2 border-dashed border-blue-200 rounded-xl hover:border-blue-500 hover:bg-blue-50 transition flex items-center justify-center gap-3 text-blue-600">
      <i class="fas fa-receipt text-2xl"></i>
      <span class="font-medium">Pagamento</span>
    </button>
  </div>
</div>
<% } %>

<!-- Recent Transactions -->
<div class="bg-white rounded-xl shadow-md border border-slate-100 overflow-hidden">
  <div class="px-6 py-4 border-b border-slate-200 flex items-center justify-between bg-slate-50">
    <h3 class="text-lg font-semibold text-slate-900">
      <i class="fas fa-history mr-2 text-blue-500"></i>Movimentações do Dia
    </h3>
    <a href="/financeiro/transacoes" hx-get="/partials/transacoes" hx-target="#main-content" hx-push-url="/financeiro/transacoes"
       class="text-blue-600 text-sm font-medium hover:text-blue-700 transition">
      Ver Todas <i class="fas fa-arrow-right ml-1"></i>
    </a>
  </div>
  
  <div class="divide-y divide-slate-100">
    <% if (transactions && transactions.length > 0) { %>
      <% transactions.slice(0, 5).forEach(tx => { %>
        <div class="p-4 hover:bg-slate-50 transition flex items-center justify-between">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 rounded-full flex items-center justify-center <%= tx.type === 'in' ? 'bg-green-100 text-green-600' : 'bg-red-100 text-red-600' %>">
              <i class="fas <%= tx.type === 'in' ? 'fa-arrow-up' : 'fa-arrow-down' %>"></i>
            </div>
            <div>
              <p class="font-medium text-slate-900"><%= tx.description %></p>
              <p class="text-sm text-slate-500"><%= tx.time %> • <%= tx.paymentMethod %></p>
            </div>
          </div>
          <p class="font-bold <%= tx.type === 'in' ? 'text-green-600' : 'text-red-600' %>">
            <%= tx.type === 'in' ? '+' : '-' %> R$ <%= tx.amount.toLocaleString('pt-BR', {minimumFractionDigits: 2}) %>
          </p>
        </div>
      <% }) %>
    <% } else { %>
      <div class="p-12 text-center text-slate-500">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <i class="fas fa-receipt text-3xl text-slate-400"></i>
        </div>
        <p class="font-medium">Nenhuma movimentação hoje</p>
      </div>
    <% } %>
  </div>
</div>

<!-- Modal Container -->
<div id="modal-container"></div>
