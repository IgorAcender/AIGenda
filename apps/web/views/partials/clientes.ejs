<!-- Page Header -->
<div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-6">
  <div>
    <h1 class="text-2xl font-bold text-slate-900">
      <i class="fas fa-users text-purple-500 mr-2"></i>Clientes
    </h1>
    <p class="text-slate-500 mt-1">Gerencie sua base de clientes</p>
  </div>
  <button 
    hx-get="/partials/clientes/form"
    hx-target="#modal-container"
    class="btn-primary flex items-center gap-2">
    <i class="fas fa-plus"></i> Novo Cliente
  </button>
</div>

<!-- Stats Row -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center text-purple-600">
      <i class="fas fa-users text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-slate-900"><%= total || 0 %></p>
      <p class="text-sm text-slate-500">Total de Clientes</p>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center text-green-600">
      <i class="fas fa-user-check text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-slate-900"><%= activeClients || total || 0 %></p>
      <p class="text-sm text-slate-500">Clientes Ativos</p>
    </div>
  </div>
  <div class="bg-white rounded-xl shadow-sm border border-slate-100 p-4 flex items-center gap-4">
    <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center text-blue-600">
      <i class="fas fa-user-plus text-xl"></i>
    </div>
    <div>
      <p class="text-2xl font-bold text-slate-900"><%= newThisMonth || 0 %></p>
      <p class="text-sm text-slate-500">Novos este Mês</p>
    </div>
  </div>
</div>

<!-- Clientes Card -->
<div class="bg-white rounded-xl shadow-md border border-slate-100 overflow-hidden">
  
  <!-- Header -->
  <div class="px-6 py-4 border-b border-slate-200 flex flex-col md:flex-row items-start md:items-center justify-between gap-4 bg-slate-50">
    <h3 class="text-lg font-semibold text-slate-900">Lista de Clientes</h3>
    <div class="flex items-center gap-3 w-full md:w-auto">
      <!-- Search -->
      <div class="relative flex-1 md:flex-none">
        <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
        <input 
          type="text" 
          name="search"
          placeholder="Buscar cliente..."
          hx-get="/partials/clientes"
          hx-trigger="keyup changed delay:300ms"
          hx-target="#clientes-table"
          hx-include="[name='search']"
          class="pl-10 pr-4 py-2.5 border border-slate-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 w-full md:w-64 bg-white"
        />
      </div>
    </div>
  </div>

  <!-- Table -->
  <div id="clientes-table" class="overflow-x-auto">
    <table class="w-full">
      <thead class="bg-slate-50 border-b border-slate-200">
        <tr>
          <th class="text-left px-6 py-3 text-xs font-semibold text-slate-600 uppercase tracking-wider">Nome</th>
          <th class="text-left px-6 py-3 text-xs font-semibold text-slate-600 uppercase tracking-wider">Telefone</th>
          <th class="text-left px-6 py-3 text-xs font-semibold text-slate-600 uppercase tracking-wider hidden md:table-cell">Email</th>
          <th class="text-left px-6 py-3 text-xs font-semibold text-slate-600 uppercase tracking-wider hidden lg:table-cell">Última Visita</th>
          <th class="text-center px-6 py-3 text-xs font-semibold text-slate-600 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100">
        <% if (clients && clients.length > 0) { %>
          <% clients.forEach(client => { %>
            <tr class="hover:bg-slate-50 transition" id="client-row-<%= client.id %>">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-purple-500 to-blue-500 rounded-full flex items-center justify-center text-white font-semibold shadow-sm">
                    <%= client.name?.charAt(0).toUpperCase() %>
                  </div>
                  <div>
                    <p class="font-medium text-slate-900"><%= client.name %></p>
                    <% if (client.birthDate) { %>
                      <p class="text-xs text-slate-500"><i class="fas fa-birthday-cake mr-1"></i><%= new Date(client.birthDate).toLocaleDateString('pt-BR') %></p>
                    <% } %>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <a href="https://wa.me/55<%= client.phone?.replace(/\D/g, '') %>" 
                   target="_blank"
                   class="text-green-600 hover:text-green-700 flex items-center gap-2 font-medium">
                  <i class="fab fa-whatsapp"></i> <%= client.phone || '-' %>
                </a>
              </td>
              <td class="px-6 py-4 text-slate-600 hidden md:table-cell"><%= client.email || '-' %></td>
              <td class="px-6 py-4 text-slate-500 text-sm hidden lg:table-cell">
                <%= client.lastVisit ? new Date(client.lastVisit).toLocaleDateString('pt-BR') : 'Nunca' %>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center justify-center gap-1">
                  <button 
                    hx-get="/partials/clientes/form?id=<%= client.id %>"
                    hx-target="#modal-container"
                    class="p-2 text-blue-500 hover:bg-blue-50 rounded-lg transition"
                    title="Editar">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button 
                    hx-delete="/api/clients/<%= client.id %>"
                    hx-confirm="Tem certeza que deseja excluir este cliente?"
                    hx-target="#client-row-<%= client.id %>"
                    hx-swap="outerHTML"
                    class="p-2 text-red-500 hover:bg-red-50 rounded-lg transition"
                    title="Excluir">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="px-6 py-12 text-center text-slate-500">
              <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-users text-3xl text-slate-400"></i>
              </div>
              <p class="font-medium">Nenhum cliente encontrado</p>
              <p class="text-sm mt-1">Clique em "Novo Cliente" para adicionar</p>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <div class="px-6 py-4 border-t border-slate-200 flex items-center justify-between bg-slate-50">
      <p class="text-sm text-slate-500">
        Mostrando <strong><%= ((page - 1) * perPage) + 1 %></strong> a <strong><%= Math.min(page * perPage, total) %></strong> de <strong><%= total %></strong> clientes
      </p>
      <div class="flex items-center gap-2">
        <% if (page > 1) { %>
          <button 
            hx-get="/partials/clientes?page=<%= page - 1 %>"
            hx-target="#main-content"
            class="px-3 py-1.5 text-sm border border-slate-300 rounded-lg hover:bg-slate-100 transition">
            <i class="fas fa-chevron-left mr-1"></i> Anterior
          </button>
        <% } %>
        <% if (page < totalPages) { %>
          <button 
            hx-get="/partials/clientes?page=<%= page + 1 %>"
            hx-target="#main-content"
            class="px-3 py-1.5 text-sm border border-slate-300 rounded-lg hover:bg-slate-100 transition">
            Próximo <i class="fas fa-chevron-right ml-1"></i>
          </button>
        <% } %>
      </div>
    </div>
  <% } %>
</div>

<!-- Modal Container -->
<div id="modal-container"></div>
