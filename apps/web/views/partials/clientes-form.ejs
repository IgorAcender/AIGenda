<!-- Modal de Cliente -->
<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" id="client-modal">
  <div class="bg-white rounded-lg shadow-xl w-full max-w-md mx-4">
    <!-- Header -->
    <div class="p-4 border-b flex items-center justify-between">
      <h3 class="text-lg font-semibold text-gray-800">
        <%= client ? 'Editar Cliente' : 'Novo Cliente' %>
      </h3>
      <button 
        onclick="document.getElementById('client-modal').remove()"
        class="text-gray-400 hover:text-gray-600 text-xl">
        ✕
      </button>
    </div>

    <!-- Form -->
    <form 
      hx-<%= client ? 'put' : 'post' %>="/api/clients<%= client ? '/' + client.id : '' %>"
      hx-target="#clientes-table"
      hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) document.getElementById('client-modal').remove()"
      class="p-4 space-y-4">
      
      <!-- Nome -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Nome *</label>
        <input 
          type="text" 
          name="name" 
          value="<%= client?.name || '' %>"
          required
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Nome completo"
        />
      </div>

      <!-- Telefone -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Telefone *</label>
        <input 
          type="tel" 
          name="phone" 
          value="<%= client?.phone || '' %>"
          required
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="(00) 00000-0000"
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
        <input 
          type="email" 
          name="email" 
          value="<%= client?.email || '' %>"
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="email@exemplo.com"
        />
      </div>

      <!-- Data de Nascimento -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Data de Nascimento</label>
        <input 
          type="date" 
          name="birthDate" 
          value="<%= client?.birthDate ? client.birthDate.substring(0, 10) : '' %>"
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <!-- CPF -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">CPF</label>
        <input 
          type="text" 
          name="cpf" 
          value="<%= client?.cpf || '' %>"
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="000.000.000-00"
        />
      </div>

      <!-- Observações -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Observações</label>
        <textarea 
          name="notes" 
          rows="3"
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          placeholder="Anotações sobre o cliente..."><%= client?.notes || '' %></textarea>
      </div>

      <!-- Actions -->
      <div class="flex gap-3 pt-4">
        <button 
          type="button"
          onclick="document.getElementById('client-modal').remove()"
          class="flex-1 px-4 py-2 border rounded-lg hover:bg-gray-50">
          Cancelar
        </button>
        <button 
          type="submit"
          class="flex-1 btn-primary">
          <%= client ? 'Salvar' : 'Cadastrar' %>
        </button>
      </div>
    </form>
  </div>
</div>
