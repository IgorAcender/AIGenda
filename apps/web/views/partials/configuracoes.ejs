<!-- Configurações -->
<div class="space-y-6">
  <!-- Dados da Empresa -->
  <div class="card">
    <div class="p-4 border-b">
      <h3 class="text-lg font-semibold text-gray-800">Dados da Empresa</h3>
    </div>
    <form hx-put="/api/tenant/settings" hx-target="#toast-container" class="p-4 space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Nome da Empresa</label>
          <input type="text" name="name" value="<%= tenant?.name || '' %>"
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Slug (URL)</label>
          <input type="text" name="slug" value="<%= tenant?.slug || '' %>" disabled
            class="w-full px-3 py-2 border rounded-lg bg-gray-100 text-gray-500"/>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Telefone</label>
          <input type="tel" name="phone" value="<%= tenant?.phone || '' %>"
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" value="<%= tenant?.email || '' %>"
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Endereço</label>
        <input type="text" name="address" value="<%= tenant?.address || '' %>"
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
      </div>
      <button type="submit" class="btn-primary">Salvar Alterações</button>
    </form>
  </div>

  <!-- Horário de Funcionamento -->
  <div class="card">
    <div class="p-4 border-b">
      <h3 class="text-lg font-semibold text-gray-800">Horário de Funcionamento</h3>
    </div>
    <form hx-put="/api/tenant/schedule" hx-target="#toast-container" class="p-4 space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Abertura</label>
          <input type="time" name="openTime" value="<%= tenant?.openTime || '09:00' %>"
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Fechamento</label>
          <input type="time" name="closeTime" value="<%= tenant?.closeTime || '18:00' %>"
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">Dias de Funcionamento</label>
        <div class="flex flex-wrap gap-2">
          <% ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'].forEach((day, i) => { %>
            <label class="flex items-center gap-2 px-3 py-2 border rounded-lg cursor-pointer hover:bg-gray-50">
              <input type="checkbox" name="workDays" value="<%= i %>" 
                <%= tenant?.workDays?.includes(i) ? 'checked' : '' %> class="rounded"/>
              <span class="text-sm"><%= day %></span>
            </label>
          <% }) %>
        </div>
      </div>
      <button type="submit" class="btn-primary">Salvar Horários</button>
    </form>
  </div>

  <!-- Aparência -->
  <div class="card">
    <div class="p-4 border-b">
      <h3 class="text-lg font-semibold text-gray-800">Aparência</h3>
    </div>
    <form hx-put="/api/tenant/appearance" hx-target="#toast-container" class="p-4 space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Cor Principal</label>
          <input type="color" name="primaryColor" value="<%= tenant?.primaryColor || '#3b82f6' %>"
            class="w-full h-10 border rounded-lg cursor-pointer"/>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Logo (URL)</label>
          <input type="url" name="logo" value="<%= tenant?.logo || '' %>" placeholder="https://..."
            class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
        </div>
      </div>
      <button type="submit" class="btn-primary">Salvar Aparência</button>
    </form>
  </div>
</div>
