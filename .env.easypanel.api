# ===========================================
# CONFIGURAÇÃO PARA EASYPANEL - API BACKEND
# ===========================================

# ============================================
# DATABASE (PostgreSQL no EasyPanel)
# ============================================
DATABASE_URL=postgresql://aigenda:SUA_SENHA_AQUI@aigenda-postgres:5432/aigenda?schema=public

# ============================================
# REDIS (Cache no EasyPanel)
# ============================================
REDIS_URL=redis://aigenda-redis:6379

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=3001
API_HOST=0.0.0.0
NODE_ENV=production

# ============================================
# JWT AUTHENTICATION
# IMPORTANTE: Gere uma chave forte e única!
# Sugestão: openssl rand -base64 64
# ============================================
JWT_SECRET=GERE_UMA_CHAVE_SECRETA_FORTE_AQUI_COM_PELO_MENOS_32_CARACTERES
JWT_EXPIRES_IN=7d

# ============================================
# CORS (Configure seus domínios)
# ============================================
CORS_ORIGIN=https://seu-dominio.com,https://api.seu-dominio.com,https://app.seu-dominio.com

# ============================================
# EMAIL / SMTP (Configure seu provedor)
# ============================================
# Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app-do-gmail
EMAIL_FROM=noreply@seu-dominio.com

# Outras opções populares:
# SendGrid: smtp.sendgrid.net (porta 587)
# Mailgun: smtp.mailgun.org (porta 587)
# AWS SES: email-smtp.us-east-1.amazonaws.com (porta 587)

# ============================================
# REDIS CONFIGURATION (Opcional)
# ============================================
REDIS_TTL=3600
REDIS_MAX_MEMORY=256mb
REDIS_EVICTION_POLICY=allkeys-lru

# ============================================
# RATE LIMITING (Já configurado no código)
# ============================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# ============================================
# LOGS & MONITORING
# ============================================
LOG_LEVEL=info
# Opções: error, warn, info, debug

# ============================================
# FEATURES (Opcional)
# ============================================
ENABLE_SWAGGER=false
ENABLE_METRICS=true
